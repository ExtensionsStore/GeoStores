<layout>

    <adminhtml_system_geostores_rules>
		<reference name="head">
			<action method="addItem"><type>skin_js</type><script>aydus/geostores/geostores.js</script></action>
			<action method="addItem">
				<type>skin_css</type>
				<name>aydus/geostores/geostores.css</name>
			</action>
		</reference>    

        <reference name="content">
            <block type="aydus_geostores/adminhtml_system_geostores_rules" name="geostores_rules" template="aydus/geostores/rules.phtml">
            	<block type="aydus_geostores/adminhtml_system_geostores_rule" name="geostores_rule" template="aydus/geostores/rule.phtml"></block>
            </block>
        </reference>
        
    </adminhtml_system_geostores_rules>

</layout>
